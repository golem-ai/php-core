{
    "type": "library",
    "name": "golem-ai/php-core",
    "description": "Core PHP library for Golem.ai",
    "homepage": "https://golem.ai",
    "license": "proprietary",
    "require": {
        "php": ">=7.1.8",
        "symfony/options-resolver": "3.*",
        "symfony/serializer": "3.*",
        "php-http/httplug-bundle": "^1.13",
        "php-http/curl-client": "^1.7",
        "guzzlehttp/psr7": "^1.4"
    },
    "require-dev": {
        "phpunit/phpunit":  "^6",
        "symfony/var-dumper": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "GolemAi\\Core\\": ""
        },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    }
}
